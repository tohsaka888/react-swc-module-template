{
  "$schema": "https://json.schemastore.org/swcrc",
  "jsc": {
    "baseUrl": "..",
    "paths": {
      "@/*": ["src/*"],
      "@source/*": ["source/*"]
    },
    "parser": {
      "syntax": "typescript",
      "tsx": true,
      "decorators": false,
      "dynamicImport": true
    },
    "transform": {
      "react": {
        "pragma": "React.createElement",
        "pragmaFrag": "React.Fragment",
        "throwIfNamespace": true,
        "development": false,
        "useBuiltins": true,
        "runtime": "classic",
        "refresh": true
      }
    },
    "target": "es2020",
    "loose": true,
    "externalHelpers": true
  },
  "module": {
    "type": "commonjs",
    "strict": true,
    "strictMode": true,
    "lazy": true,
    "noInterop": true
  },
  "minify": true,
  "sourceMaps": true
}
